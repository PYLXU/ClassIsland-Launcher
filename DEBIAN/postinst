#!/bin/bash

# 下载并解压ClassIsland.zip
download_and_extract_classisland() {
    local url="https://github.com/ClassIsland/ClassIsland/releases/download/1.5.0.4/ClassIsland.zip"
    local zip_path="/tmp/ClassIsland.zip"
    local install_dir="/usr/local/share/ClassIsland"

    echo "正在下载 ClassIsland.zip..."
    wget -O "$zip_path" "$url" || { echo "Failed to download ClassIsland.zip"; exit 1; }

    echo "正在解压 ClassIsland.zip 到 $install_dir..."
    mkdir -p "$install_dir"
    unzip -o "$zip_path" -d "$install_dir" || { echo "Failed to extract ClassIsland.zip"; exit 1; }
}

# 主逻辑
download_and_extract_classisland

exit 0